Order deny,allow
deny from all


LimitRequestBody 0
php_value memory_limit 512M
php_value upload_max_filesize 500M
php_value post_max_size 500M
php_value max_execution_time 120

DirectoryIndex index.php

Options All -Indexes

Options +FollowSymlinks

# Authentification ou non selon l'environnement de deploiement
#SetEnvIf HOST "localhost" SERVER_ENV_LOCAL !SERVER_ENV_RECETTE !SERVER_ENV_RECETTE_APF !SERVER_ENV_PREPROD !SERVER_ENV_PROD
SetEnvIf HOST "localhost" SERVER_ENV_LOCAL !SERVER_ENV_RECETTE !SERVER_ENV_RECETTE_APF !SERVER_ENV_PREPROD !SERVER_ENV_PROD


Order deny,allow
deny from all
allow from env=SERVER_ENV_LOCAL
deny from env=SERVER_ENV_RECETTE
Satisfy any


# Repertoire virtuel de Base differente par environnement pour la reecriture d'URL

#SetEnvIf HOST "localhost" PROJECT_BASE_PATH=/projets/E-magazine/srcs/
SetEnvIf HOST "localhost" PROJECT_BASE_PATH=/projets/E-magazine/srcs/

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . %{ENV:PROJECT_BASE_PATH}index.php [L]
</IfModule>

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /projets/E-magazine/srcs/
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /projets/E-magazine/srcs/index.php [L]
</IfModule>

# END WordPress